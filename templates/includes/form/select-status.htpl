      <div class="control-group">
	 <label class="control-label" for="status">{$label|default:'Status'}</label>
        <div class="controls">
          <select class="span4 required" id="{$name|default:'status'}" id="{$name|default:'status'}">
           <option value="1" {if $value == "1" || empty($value)}selected="selected"{/if}>aktiv</option>
           <option value="0" {if $value == "0" && !empty($value)}selected="selected"{/if}>inaktiv</option>
          </select>
        </div>
      </div>